generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Admin {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String?
  firstname String    @db.VarChar(255)
  lastname  String    @db.VarChar(255)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  @@map("admin")
}

model CarGuest {
  id           Int       @id @default(autoincrement())
  licensePlate String
  color        String
  brand        String
  model        String
  year         Int
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  deletedAt    DateTime?
  Log          Log[]

  @@map("car_guest")
}

model Car {
  id           Int       @id @default(autoincrement())
  licensePlate String
  color        String
  brand        String
  model        String
  year         Int
  province     String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  deletedAt    DateTime?
  staffId      Int
  staff        Staff     @relation(fields: [staffId], references: [id])
  Log          Log[]

  @@index([staffId], map: "car_staffId_fkey")
  @@map("car")
}

model Device {
  id           Int       @id @default(autoincrement())
  name         String
  description  String?
  brand        String?
  price        Float     @default(0)
  deviceSerial String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  deletedAt    DateTime?
  zoneId       Int
  zone         Zone      @relation(fields: [zoneId], references: [id])

  @@index([zoneId], map: "device_zoneId_fkey")
  @@map("device")
}

model Log {
  id             Int       @id @default(autoincrement())
  zoneId         Int
  staffId        Int
  carId          Int?
  carGuestId     Int?
  timestamp      DateTime  @default(now())
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  deletedAt      DateTime?
  licenseUrl     String?   @db.Text
  arrowDirection String?   @db.VarChar(255)
  carGuest       CarGuest? @relation(fields: [carGuestId], references: [id])
  car            Car?      @relation(fields: [carId], references: [id])
  staff          Staff     @relation(fields: [staffId], references: [id])
  zone           Zone      @relation(fields: [zoneId], references: [id])

  @@index([carGuestId], map: "log_carGuestId_fkey")
  @@index([carId], map: "log_carId_fkey")
  @@index([staffId], map: "log_staffId_fkey")
  @@index([zoneId], map: "log_zoneId_fkey")
  @@map("log")
}

model Parking {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  amount      Int       @default(0)
  zoneId      Int
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?
  zone        Zone      @relation(fields: [zoneId], references: [id])

  @@index([zoneId], map: "parking_zoneId_fkey")
  @@map("parking")
}

model Staff {
  id          Int           @id @default(autoincrement())
  firstname   String
  lastname    String
  email       String
  phoneNumber String
  position    StaffPosition @default(Other)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  deletedAt   DateTime?
  status      Boolean       @default(false)
  cars        Car[]
  Log         Log[]

  @@map("staff")
}

model Zone {
  id              Int       @id @default(autoincrement())
  name            String
  description     String?
  occupancy       Int
  maximumCapacity Int
  address         String?
  latitude        Float?
  longitude       Float?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  deletedAt       DateTime?
  devices         Device[]
  Log             Log[]
  parking         Parking[]

  @@map("zone")
}

enum StaffPosition {
  Professor
  Researcher
  Assistant
  Staff
  Student
  Other
}
